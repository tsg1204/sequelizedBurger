<div class="text-center">
     <img id="burgerPic" src="/assets/img/burger.png">
</div>

<div class="container">
     <div class="row">
          <div class="col-xs-12 col-md-4">
               <h2 class="text-center">Burgers On the Menu</h2>
               <ul>
                 {{#each burgers}}
                   {{#unless this.devoured}}
                     <li>
                       {{this.burger_name}}
                       <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="1">
                         <button type="submit">Devour Burger!</button>
                       </form>
                     </li>
                   {{/unless}}
                 {{/each}}
               </ul>
          </div>
          <div class="col-xs-12 col-md-4">
               <h2 class="text-center">Add a Burger</h2>
               <form class="create-update-form" action="burgers/create" method="POST">

                 <div class="form-group">
                   <label for="ca">Burger Name:</label>
                   <input type="text" id="ca" name="burger_name">
                 </div>

                 <button type="submit">Add Burger</button>
               </form>
          </div>
          <div class="col-xs-12 col-md-4">
               <h2 class="text-center">Devoured Burgers</h2>
               <ul>
                 {{#each burgers}}
                   {{#if this.devoured}}
                     <li>
                       {{this.burger_name}}
                     </li>
                   {{/if}}
                 {{/each}}
               </ul>
          </div>